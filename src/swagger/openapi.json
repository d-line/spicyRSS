{
  "openapi": "3.0.1",
  "info": {
    "title": "SpicyRSS API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "SpicyRSS API",
      "description": "RSS reader API"
    }
  ],
  "paths": {
    "/feeds": {
      "get": {
        "summary": "get list of feeds",
        "tags": [
          "Feed"
        ],
        "parameters": [],
        "produces":"application/json",
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Feed"
              }
            }
          }
        }
      },
      "post": {
        "summary": "creates new feed",
        "tags": [
          "Feed"
        ],
        "requestBody": {
          "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Feed"
                },
                "example": {
                  "name": "The Verge",
                  "url": "https://www.theverge.com/rss/index.xml"
                }
              }
            }
          }
        }
      }
    },
  "components": {
    "schemas": {
      "Feed": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          },
          "lastFetched": {
            "type": "date"
          },
          "createdAt": {
            "type": "date"
          },
          "updatedAt": {
            "type": "date"
          },
          "status":{ 
            "type": "number"
          } 
        }
      }
    }
  }
}