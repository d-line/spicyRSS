{
  "openapi": "3.0.1",
  "info": {
    "title": "SpicyRSS API",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "tags": [
    {
      "name": "SpicyRSS API",
      "description": "RSS reader API"
    }
  ],
  "paths": {
    "/feeds": {
      "post": {
        "summary": "creates new feed",
        "tags": [
          "feed"
        ],
        "requestBody": {
          "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Feed"
                },
                "example": {
                  "name": "The Verge",
                  "url": "https://www.theverge.com/rss/index.xml"
                }
              }
            }
          }
        }
      }
    },
  "components": {
    "schemas": {
      "Feed": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }
      }
    }
  }
}